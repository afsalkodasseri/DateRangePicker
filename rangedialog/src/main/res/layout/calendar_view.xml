                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fri"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
